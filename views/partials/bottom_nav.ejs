<% const navItems=[ { href: '/' , icon: 'home' , text: 'Home' }, { href:
'/explore' , icon: 'explore', text: 'Explore' }, { href: '/album', icon:
'album', text: 'Albums' }, { href: '/playlist' , icon: 'queue_music' , text:
'Playlist' } ] %>

<nav class="bottom-nav">
  <a href="/" class="logo bottom-nav-item">
    <div class="icon-wrapper">
      <img
        src="/images/favicon.svg"
        alt="Musify logo"
        class="small"
        width="24"
        height="24"
      />
      <img
        src="/images/favicon.svg"
        alt="Musify logo"
        class="large"
        width="94"
        height="24"
      />
      <p class="bottom-nav-text label-medium">Musify</p>
    </div>
  </a>

  <% navItems.forEach(({href, icon, text}) => { %>
  <a
    href="<%=href%>"
    class="bottom-nav-item <%=locals.currentRoute === href ? 'active' : ''%>"
    data-bottom-nav_item
  >
    <div class="icon-wrapper">
      <span class="material-symbols-rounded icon" translate="no"> <%=icon%> </span>

      <div class="indicator"></div>
      <div class="state-layer"></div>
    </div>

    <p class="bottom-nav-text label-medium" translate="no"><%=text%></p>
  </a>

  <% }); %>
</nav>
